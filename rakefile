import './myneta_api/rakefile'

task :run, [:port] do |t, args|
  desc 'Run the server'
  puts 'Starting server'
  args.with_defaults(port: 3000)
  `rackup config.ru -p #{args.port}`
end

task :unicorn do |t|	
	desc 'Start the unicorn server'
	`unicorn -c ./conf/unicorn.rb -D`
end

task default: [:run]
